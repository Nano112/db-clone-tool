# Production Database (Source) - Copy these values from your production environment
PROD_DB_HOST=your-production-host.com
PROD_DB_PORT=5432
PROD_DB_DATABASE=your_prod_database
PROD_DB_USERNAME=your_prod_username
PROD_DB_PASSWORD=your_prod_password
PROD_DB_SSL=true

# Local Database (Target) - Your local development database
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=your_local_database
DB_USERNAME=your_local_username
DB_PASSWORD=your_local_password

# Additional Laravel environment variables (if needed)
DB_CONNECTION=pgsql
APP_ENV=local
APP_DEBUG=true

# Example configurations:
# For Laravel Cloud:
# PROD_DB_HOST=ep-something-something.aws-region.pg.laravel.cloud
# PROD_DB_SSL=true

# For Laravel Sail:
# DB_HOST=localhost (or use pgsql if connecting from within Docker)
# DB_USERNAME=sail
# DB_PASSWORD=password

# For Heroku Postgres:
# PROD_DB_HOST=your-heroku-host.amazonaws.com
# PROD_DB_SSL=true

# For local PostgreSQL:
# DB_HOST=127.0.0.1
# DB_USERNAME=postgres
# DB_PASSWORD=your_password